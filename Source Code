class Student: 
    def requestBook(shelf):
        shelf.book = input("Enter the name of the book you want to borrow: ")
        return shelf.book

    def returnBook(shelf):
        shelf.book = input("Enter the name of the book you want to return: ")
        return shelf.book
         

